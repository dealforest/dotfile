" -------------------------------------------------------------------------
" Basic settings.
" -------------------------------------------------------------------------
  set incsearch           "インクリメンタル検索を行う
  set smartcase           "検索文字列に大文字が含まれている場合は区別して検索する
  set ignorecase          "検索文字列が小文字の場合は大文字小文字を区別なく検索する
  set hlsearch

  set showmatch           "括弧入力時の対応する括弧を表示 
  set showmode            "入力中のコマンドをステータスに表示する
  set title
  set ruler

  set nobackup
  set complete+=k

  " for fast scroll
  set nocursorcolumn
  set nocursorline
  syntax sync minlines=256

  set directory=~/.vim/tmp

  set t_Co=256
  set splitright

" -------------------------------------------------------------------------
" Keybind
" -------------------------------------------------------------------------
  " for us key.
  nnoremap ; :

  " 検索後、真ん中にフォーカスをあわせる
  noremap n nzz
  noremap N Nzz
  noremap * *zz
  noremap # #zz
  noremap g* g*zz
  noremap g# g#zz

  " hilight を消す
  nnoremap <silent> gh :let @/=''<CR>
  nnoremap g' cs'g
  nnoremap g" cs"G

  noremap <C-j> j
  noremap <C-k> k
  noremap <C-h> h
  noremap <C-l> l

  inoremap <C-j> <C-[>
  inoremap <C-f> <Right>
  inoremap <C-b> <Left>
  " 連続した改行の際にインデントを保持する
  inoremap <Return>  <Return>X<BS>
