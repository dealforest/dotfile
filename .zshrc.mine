export PATH=:$PATH:~/bin/
export EDITOR=vim
export PAGER=less

#######################################################
#
#   for mac
#
#######################################################
if [ `uname` = 'Darwin' ]; then
    export PATH=/opt/local/bin:/opt/local/sbin/:/opt/local/app/flex3/bin/:/opt/local/apache2/bin/:$PATH
    export MANPATH=/opt/local/man:$MANPATH

    alias o='open .'
    alias rascut='_JAVA_OPTIONS=-Duser.language=en rascut'
    alias updatedb='sudo /usr/libexec/locate.updatedb'
    alias locate='/usr/bin/locate'
fi

#######################################################
#
#   common shortcut
#
#######################################################
alias l='ls --color=auto' ls='ls --color=auto' ll='ls -l --color=auto' la='ls -la --color=auto'
alias vi=vim v=vim mvi='open -a Vim' dvi='vim -c '"'"'set runtimepath+=~/dotfile/.vim'"'"' -u ~/dotfile/.vimrc '
alias g=git gs='git svn'
alias perldoc='env LANG=C perldoc'
alias phpinfo='php -r "phpinfo\(\);"'
alias sshnew='ssh -S none'
alias ssh_eucjp='cocot -t UTF-8 -p EUC-JP ssh'
alias ssh_sjis='cocot -t UTF-8 -p SJIS ssh'

if [ -x /opt/local/bin/colordiff ];then
    alias diff='colordiff'
fi
#######################################################
#
#   project shortcut
#
#######################################################
alias wiz='cd ~/work/company/7pp/wizperl/Wiz/lib/Wiz/'
alias wizc='cd ~/work/company/7pp/wizperl/Wiz-Catalyst/lib/Catalyst/'
alias wizapp='wizapp.pl -t ~/.TmplApp'
alias bt='~/work/projects/BlackCherry/trunk/' bc='~/work/projects/BlackCherry/crowler/'
alias scb='chdir ~/work/projects/BlackCherry/trunk/ && screen -h 4000 -S BlackCherry -U' scrb='screen -r BlackCherry'
alias scbc='chdir ~/work/projects/BlackCherry/crowler/ && screen -h 4000 -S BlackCherryCrowler -U' scrbc='screen -r BlackCherryCrowler'

