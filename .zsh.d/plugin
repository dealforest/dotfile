# -------------------------------------------------------------------------
# peco
# -------------------------------------------------------------------------
if [ -d $HOME/.zsh.d/plugins/peco ]; then
    for file in $HOME/.zsh.d/plugins/peco/*.zsh; do
        source "$file"
    done

    bindkey '^]' peco-src

    bindkey '^r' peco-select-history
    bindkey '^q' peco-cdr
fi
